<form id="register" method="post" action="AdministartorsRegister" name="Register">
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="content">
            <legend>管理员注册</legend>
            <div>
                <input id="administratorAccount" name="AdministratorAccount" type="text" placeholder="输入用户名" required />
                @Html.ValidationMessage("AdministratorAccount", new { @class = "error" })
            </div>
            <div>
                <input type="password" id="administratorPassword" name="AdministratorPassword" placeholder="输入密码" required />
                @Html.ValidationMessage("AdministratorPassword", new { @class = "error" })
            </div>
            <div>
                <a href="#">账号申诉</a>
            </div>
            <div>
                <input disabled id="next" type="submit" value="下一步" />
                @Html.ValidationMessage("RegisterError", new { @class = "error" })
            </div>
        </div>
    </fieldset>
</form>
