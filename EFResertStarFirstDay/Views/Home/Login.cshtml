@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Login.css" rel="stylesheet" />
    <title>登录</title>
</head>
<body>
    <div class="titleHead">
        <h1>标题</h1>
</div>
<div class="content">
    <div id="ajaxUpdate">
        <form id="Login" method="post" action="~/Home/Login" name="Register">
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="content">
                    <legend>登录</legend>
                    <div>
                        <input id="administratorAccount" name="Account" type="text" placeholder="输入用户名" required />
                        @Html.ValidationMessage("Account", new { @class = "error" })
                    </div>
                    <div>
                        <input type="password" id="administratorPassword" name="Password" placeholder="输入密码" required />
                        @Html.ValidationMessage("Password", new { @class = "error" })
                    </div>
                    <div>
                        <input class="validateCode" type="text"placeholder="输入验证码" name="ValidateCode"/>
                        <a class="getvalidateCode" href="~/Home/GetEmailValidateCode">获取验证码</a>
                    </div>
                    <div>
                        <div class="option">
                            <input id="admin" type="radio" name="Option" value="administartor" />
                            <label for="admin">管理员</label>
                            <input id="gener" type="radio" name="Option" checked="checked" value="generUser" />
                            <label for="gener">普通用户</label>
                            <input id="xz" type="radio" name="Option" value="Xz" />
                            <label for="xz">校长</label>
                        </div>
                        <a href="~/AdministartorRegister/AdministartorsRegister">去注册</a>
                        <a href="#">账号申诉</a>
                        <a href="#">忘记密码</a>
                    </div>
                    <div>
                        <input id="next" type="submit" value="登录" />
                        @Html.ValidationMessage("LogInError", new { @class = "error" })
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div class="rightSlider">
        <img src="~/Img/1.jpg" />
        <img src="~/Img/2.jpg" />
        <img src="~/Img/3.jpg" />
        <img src="~/Img/4.jpg" />
        <img src="~/Img/5.jpg" />
    </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/MouseSlider.js"></script>
<script id="time"></script>
</body>
</html>